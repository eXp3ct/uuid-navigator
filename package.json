{
  "name": "uuid-navigator",
  "displayName": "UUID Navigator",
  "description": "Подсветка и навигация по UUID в SQL-файлах",
  "repository": {
    "type": "git",
    "url": "https://github.com/eXp3ct/uuid-navigator.git"
  },
  "homepage": "https://github.com/eXp3ct/uuid-navigator#readme",
  "bugs": "https://github.com/eXp3ct/uuid-navigator/issues",
  "changelog": "https://github.com/eXp3ct/uuid-navigator/blob/main/CHANGELOG.md",
  "icon": "images/icon.png",
  "license": "MIT",
  "version": "1.8.0",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:sql",
    "onLanguage:mssql"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "uuid-navigator.findUuids",
        "title": "Find all UUIDs in current file",
        "category": "UUID Navigator"
      },
      {
        "command": "uuid-navigator.clearHighlights",
        "title": "Clear UUID highlights",
        "category": "UUID Navigator"
      },
      {
        "command": "uuid-navigator.refreshBlameCache",
        "title": "Refresh UUID Blame Cache",
        "category": "UUID Navigator"
      },
      {
        "command": "uuid-navigator.showExplorer",
        "title": "Show UUID Explorer",
        "category": "UUID Navigator"
      },
      {
        "command": "uuid-navigator.refreshExplorer",
        "title": "Refresh UUID Explorer",
        "category": "UUID Navigator"
      },
      {
        "command": "uuid-navigator.insertUuid",
        "title": "Insert UUID",
        "category": "UUID Navigator"
      },
      {
        "command": "uuid-navigator.focusTreeView",
        "title": "Focus Tree View",
        "category": "UUID Navigator"
      },
      {
        "command": "uuid-navigator.goToDefinition",
        "title": "Go to UUID Definition",
        "category": "UUID Navigator"
      },
      {
        "command": "uuid-navigator.goToDefinitionFromTreeView",
        "title": "Go to UUID Definition",
        "category": "UUID Navigator"
      },
      {
        "command": "uuid-navigator.validateCurrentFile",
        "title": "Validate Current SQL File",
        "category": "UUID Navigator"
      },
      {
        "command": "uuid-navigator.showValidatorLogs",
        "title": "Show Validator Logs",
        "category": "UUID Navigator"
      },
      {
        "command": "uuid-navigator.manageClassAliases",
        "title": "Manage class aliases",
        "category": "UUID Navigator"
      },
      {
        "command": "uuid-navigator.clearAllAliases",
        "title": "Clear all aliases",
        "category": "UUID Navigator"
      }
    ],
    "languages": [
      {
        "id": "mssql",
        "aliases": [
          "MS SQL"
        ]
      }
    ],
    "configuration": {
      "title": "UUID Navigator",
      "properties": {
        "uuidNavigator.applyStyles": {
          "type": "boolean",
          "default": true,
          "description": "Apply styles for highlight"
        },
        "uuidNavigator.highlightColor": {
          "type": "string",
          "default": "#569CD6",
          "description": "Text color for UUID highlighting (HEX format)"
        },
        "uuidNavigator.underline": {
          "type": "boolean",
          "default": true,
          "description": "Underline UUIDs"
        },
        "uuidNavigator.backgroundColor": {
          "type": "string",
          "default": "#64c8ff1a",
          "description": "Background color for UUIDs (HEX with alpha, e.g. #RRGGBBAA)"
        },
        "uuidNavigator.showNotifications": {
          "type": "boolean",
          "default": false,
          "description": "Show notifications when finding UUID references"
        },
        "uuidNavigator.showBlameOnHover": {
          "type": "boolean",
          "default": true,
          "description": "Show blame information when hovering over UUIDs"
        },
        "uuidNavigator.blameTemplate": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "type",
              "className",
              "propertyName",
              "uuid",
              "classUuid",
              "classType",
              "description",
              "dataType",
              "goToButton"
            ]
          },
          "default": [
            "type",
            "className",
            "classUuid",
            "classType",
            "uuid",
            "propertyName",
            "description",
            "dataType",
            "goToButton"
          ],
          "description": "Template for blame message. Select which elements to show and their order",
          "scope": "resource"
        },
        "uuidNavigator.enableValidation": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic SQL validation"
        },
        "uuidNavigator.validateJson": {
          "type": "boolean",
          "default": true,
          "description": "Validate JSON structures in SQL files"
        },
        "uuidNavigator.validateInserts": {
          "type": "boolean",
          "default": true,
          "description": "Validate INSERT statements (Not implemented)"
        },
        "uuidNavigator.validateParameters": {
          "type": "boolean",
          "default": true,
          "description": "Validate SQL parameters (:my_utc_now, etc.) (Not implemented)"
        },
        "uuidNavigator.cursorPointer": {
          "type": "boolean",
          "default": true,
          "description": "Pointer cursor on uuid hover"
        },
        "uuidNavigator.ignoreStatus": {
          "type": "boolean",
          "default": true,
          "description": "Ignore status class to prevent linking objects to it"
        },
        "uuidNavigator.ignoreUuid": {
          "type": "string",
          "default": "b2d437bc-af8e-4d75-ac25-70f481251233",
          "description": "Status class uuid to ignore",
          "pattern": "[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}"
        },
        "uuidNavigator.autoLinking": {
          "type": "boolean",
          "default": true,
          "description": "Auto linking specified properties"
        },
        "uuidNavigator.autoLinkedProperties": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "Property name"
              },
              "uuid": {
                "type": "string",
                "description": "Property UUID",
                "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$"
              },
              "classId": {
                "type": ["string", "null"],
                "description": "Property's class id",
                "pattern": "^([0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}|null)$"
              }
            },
            "additionalProperties": false,
            "minProperties": 2,
            "description": "Must have tree fields"
          },
          "default": [
            {
              "name": "Статус",
              "uuid": "576a5608-b985-4b67-ac22-eb2e9d8082bd",
              "classId": "b2d437bc-af8e-4d75-ac25-70f481251233"
            },
            {
              "name": "Номер",
              "uuid": "dd2e45a7-e44d-4da0-9f1d-34010e448d92",
              "classId": null
            }
          ],
          "description": "Свойства, которые автоматически привязываются ко всем классам"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "uuid-navigator",
          "title": "UUID Navigator",
          "icon": "images/icon.png"
        }
      ]
    },
    "views": {
      "uuid-navigator": [
        {
          "id": "uuidExplorer",
          "name": "Explorer",
          "icon": "images/icon.png"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "uuidExplorer",
        "contents": "No UUID classes found. [Refresh Explorer](command:uuid-navigator.refreshExplorer)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "uuid-navigator.refreshExplorer",
          "when": "view == uuidExplorer",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "uuid-navigator.manageClassAliases",
          "when": "view == uuidExplorer && viewItem == class",
          "group": "uuid-navigation"
        },
        {
          "command": "uuid-navigator.goToDefinitionFromTreeView",
          "when": "view == uuidExplorer && viewItem =~ /^(class|property|object)$/",
          "group": "uuid-navigation"
        }
      ]
    },
    "keybindings": [
      {
        "key": "ctrl+alt+u",
        "command": "uuid-navigator.focusTreeView"
      }
    ],
    "snippets": [
      {
        "language": "sql",
        "path": "./snippets/sql-snippets.json"
      }
    ]
  },
  "publisher": "eXp3ct",
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "node build-readme.js && webpack --mode production",
    "watch": "webpack --watch --mode development",
    "pretest": "yarn run compile && yarn run lint --fix",
    "lint": "eslint src",
    "test": "vscode-test",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3",
    "vsce": "^2.15.0",
    "webpack": "^5.101.0",
    "webpack-cli": "^6.0.1",
    "webpack-node-externals": "^3.0.0"
  },
  "dependencies": {
    "@types/lodash.debounce": "^4.0.9",
    "jsonc-parser": "^3.3.1",
    "lodash.debounce": "^4.0.8"
  }
}